<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/spacing_small"
    android:paddingEnd="@dimen/spacing_small"
    android:background="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_first_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container_second_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/tv_home_trending_title"
            style="@style/GreySmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Now"
            android:textColor="@color/greyish_brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_trending_title">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/im_home_trending_rest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shahi_paneer"
                    android:background="@drawable/rounded_rectangle_blackish"/>

                <TextView
                    style="@style/WhiteSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@drawable/ic_flag_gradient"
                    android:paddingStart="@dimen/spacing_extra_small"
                    android:paddingTop="@dimen/spacing_extra_tiny"
                    android:paddingEnd="@dimen/spacing_extra_small"
                    android:paddingBottom="@dimen/spacing_extra_tiny"
                    android:textAllCaps="true"
                    android:textSize="@dimen/font_extra_small"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="20% off" />

                <TextView
                    style="@style/WhiteJosefinSansRegularSmallText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/spacing_extra_tiny"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"
                    android:text="The Black Rabbit" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny">

                <TextView
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:drawableStart="@drawable/ic_location_marker_red"
                    android:drawablePadding="@dimen/spacing_tiny"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/tv_home_trending_rest_rating"
                    android:paddingEnd="1dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Sarjapur " />

                <TextView
                    android:id="@+id/tv_home_trending_rest_rating"
                    style="@style/WhiteSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_tiny"
                    android:background="@drawable/background_rectangle_green_radient"
                    android:text="4.4" />

            </RelativeLayout>

            <TextView
                style="@style/GreySmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/aqua_blue"
                android:text="5 SEATS AVAILABLE" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_user_private_recent_shops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_trending_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_second_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container_third_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_first_home"
        app:layout_constraintVertical_weight="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_lightest_grey_stroke"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:elevation="@dimen/spacing_elevation_fix_extreme_tiny"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/button_height_normal"
                        android:layout_height="@dimen/button_height_medium"
                        android:src="@drawable/ic_saved_hand" />

                    <TextView
                        style="@style/GreyHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aqua_blue"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:text="4,000" />

                </LinearLayout>

                <TextView
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="You Saved" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="@color/extra_light_grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/button_height_medium"
                        android:layout_height="@dimen/button_height_normal"

                        android:src="@drawable/ic_brownie_cash" />

                    <TextView
                        style="@style/GreyHeadingStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/aqua_blue"
                        android:paddingStart="@dimen/spacing_tiny"
                        android:paddingEnd="@dimen/spacing_tiny"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:text="$ 400" />

                </LinearLayout>

                <TextView
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Brownie Cash" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="@color/extra_light_grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/button_height_medium"
                        android:layout_height="@dimen/button_height_medium"
                        android:src="@drawable/ic_bonus" />

                    <TextView
                        style="@style/GreyHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/aqua_blue"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:text="40" />

                </LinearLayout>

                <TextView
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="Claim Rewards" />


            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_third_home"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/container_fourth_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_second_home">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/settle_payment_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_fourth_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_third_home"
        app:layout_constraintVertical_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_friends" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building a\nCommunity"
                    android:textColor="@color/light_pink"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textSize="@dimen/font_extra_large" />

                <TextView
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_extra_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:drawableEnd="@drawable/ic_join_community"
                    android:text="Join us!\nSet up\nyour profile" />

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>