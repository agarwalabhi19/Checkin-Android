<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/WhiteCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_user_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/flier"
            app:riv_corner_radius="10.5dip"
            app:riv_mutate_background="true" />

        <!--<TextView android:layout_marginTop="-12dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|center_horizontal"-->
        <!--android:background="@drawable/bordered_red_white"-->
        <!--android:paddingStart="18dp"-->
        <!--android:paddingTop="2dp"-->
            <!--android:textColor="@color/primary_red"-->
            <!--android:textSize="12sp"-->
        <!--android:paddingEnd="18dp"-->
        <!--android:paddingBottom="2dp"-->
        <!--android:text="Follow" />-->
        <Button
            android:layout_marginTop="-12dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_short"
            android:layout_gravity="bottom|center_horizontal"
            style="@style/ButtonPositiveAction"
            android:text="Follow"/>

        <TextView
            android:layout_marginTop="7dp"
            style="@style/GreyTextStyle"
            android:layout_gravity="center_horizontal"
            android:text="Alex Norris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/PinkishGreySmallTextStyle"
            android:layout_gravity="center_horizontal"
            android:text="Layon, France"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_recent_checkin_head"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="9 Mutual Connection"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:textColor="@color/primary_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Visited"
                        android:textColor="@color/primary_red"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Cheesy Does It"
                        android:textColor="@color/brownish_grey"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>