<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    android:elevation="@dimen/spacing_elevation_fix_extreme_tiny">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/manager_session_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_header_back"
            android:layout_width="@dimen/width_small_icon"
            android:layout_height="@dimen/size_extra_small_button"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:paddingStart="@dimen/spacing_small"
            android:layout_weight="1"
            android:fontFamily="@font/arial_rounded_mt_bold"
            tools:text="@string/action_invoice"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>