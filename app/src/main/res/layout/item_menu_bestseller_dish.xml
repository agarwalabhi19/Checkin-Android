<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_menu_bestseller_item"
    android:layout_marginEnd="@dimen/spacing_extra_small"
    android:layout_marginBottom="@dimen/spacing_extra_small"
    android:background="@drawable/rounded_rectangle_white"
    android:orientation="vertical"
    android:padding="@dimen/spacing_extra_small">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menu_bestseller_item_thumbnail">
        <ImageView
            android:id="@+id/im_menu_dish_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:src="@drawable/ic_action_clean_table" />

        <ImageView
            android:id="@+id/im_menu_dish_group_icon"
            android:layout_width="@dimen/height_menu_bestseller_item_thumbnail"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_extra_small"
            tools:src="@drawable/ic_action_clean_table" />

        <TextView
            style="@style/WhiteSmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/ic_red_flag"
            android:paddingStart="@dimen/spacing_tiny"
            android:paddingTop="@dimen/spacing_tiny"
            android:paddingEnd="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_extra_tiny"
            android:text="BESTSELLER"
            android:gravity="center"
            android:textSize="@dimen/font_tiny" />
    </FrameLayout>

    <TextView
        android:id="@+id/im_menu_dish_name"
        style="@style/GreySmallTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extra_small"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Paneer Butter Masala" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny">

        <TextView
            android:id="@+id/tv_menu_dish_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            tools:text="$ 234" />

        <FrameLayout
            android:id="@+id/container_as_menu_bestseller_quantity_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/container_menu_bestseller_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:visibility="gone"
                android:minWidth="@dimen/width_menu_add_quantity">

                <TextView
                    android:id="@+id/tv_menu_bestseller_item_quantity_decrement"
                    style="@style/RedTextStyle"
                    android:layout_width="@dimen/size_small_icon"
                    android:layout_height="@dimen/size_small_icon"
                    android:background="@drawable/shape_oval_red_stroke"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_menu_bestseller_item_quantity_number"
                    style="@style/RedTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="@dimen/size_medium_icon"
                    android:text="12" />

                <TextView
                    android:id="@+id/tv_menu_bestseller_item_quantity_increment"
                    style="@style/RedTextStyle"
                    android:layout_width="@dimen/size_small_icon"
                    android:layout_height="@dimen/size_small_icon"
                    android:layout_gravity="end"
                    android:background="@drawable/shape_oval_red_stroke"
                    android:gravity="center"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_as_menu_bestseller_item_add"
                style="@style/RedSmallTextStyle"
                android:layout_width="@dimen/width_menu_add_quantity"
                android:layout_height="@dimen/size_small_button"
                android:layout_gravity="center|end"
                android:background="@drawable/rounded_rectangle_green_stroke"
                android:textColor="@color/apple_green"
                android:gravity="center"
                android:text="Add "
                android:visibility="visible" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>