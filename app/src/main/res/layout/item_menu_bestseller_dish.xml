<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_white"
    android:padding="@dimen/spacing_extra_small">

    <ImageView
        android:id="@+id/im_menu_dish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_tall"
        android:src="@drawable/ic_action_clean_table"/>

    <TextView
        android:id="@+id/im_menu_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GreySmallTextStyle"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/spacing_extra_small"
        tools:text="Paneer Butter Masala"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_menu_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="$ 234"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RedSmallTextStyle"
            android:text="Add"
            android:paddingStart="@dimen/spacing_extra_small"
            android:paddingEnd="@dimen/spacing_extra_small"
            android:paddingTop="@dimen/spacing_extra_tiny"
            android:paddingBottom="@dimen/spacing_extra_tiny"
            android:background="@drawable/ic_extra_small_rouge_stroke"/>

    </LinearLayout>

</LinearLayout>